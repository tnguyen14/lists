#!/bin/bash

# usage: create-list <list-type> <list-name>

if [ ! -f .env ]; then
    echo ".env file required"
    exit 1
fi

export $(cat .env | xargs)

curl -X POST -H "Authorization: Bearer ${AUTH_TOKEN}" \
    -H "Content-Type: application/json" \
    --data "{\"type\": \"$1\", \"name\": \"$2\"}" \
    "${API_SERVER}"
